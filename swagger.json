        "tags": [
          "employees"
        ],
        "summary": "Search for an employee with provided criteria.",
        "operationId": "searchEmployees",
        "parameters": [
          {
            "type": "string",
            "example": "James",
            "x-go-name": "FirstName",
            "description": "search by first name",
            "name": "first_name",
            "in": "query"
          },
          {
            "type": "string",
            "example": "Howlett",
            "x-go-name": "LastName",
            "description": "search last name",
            "name": "last_name",
